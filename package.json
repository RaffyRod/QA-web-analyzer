{
  "name": "qa-web-analyzer",
  "version": "1.0.0",
  "description": "Web accessibility analyzer for images, links, buttons, inputs, and ARIA elements",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc --watch & node --watch dist/server.js",
    "type-check": "tsc --noEmit",
    "run": "node start.js",
    "format": "prettier --write \"**/*.{ts,js,json,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,css,md}\"",
    "lint": "prettier --check \"**/*.{ts,js,json,html,css,md}\" && tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "accessibility",
    "qa",
    "analyzer",
    "aria",
    "alt",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tsc --noEmit --pretty"
    ],
    "*.js": [
      "prettier --write"
    ],
    "*.{json,html,css,md}": [
      "prettier --write"
    ]
  }
}
