{
  "name": "qa-web-analyzer",
  "version": "1.0.0",
  "description": "Web accessibility analyzer for images, links, buttons, inputs, and ARIA elements",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "_build": "tsc && cd frontend && npm install && npm run build",
    "_build:backend": "tsc",
    "_build:frontend": "cd frontend && npm install && npm run build",
    "start": "node dist/server.js",
    "start:all": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm start\" \"cd frontend && npm run dev\"",
    "setup": "node setup-and-run.js",
    "dev": "tsc --watch & node --watch dist/server.js",
    "dev:all": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"pnpm dev\" \"cd frontend && npm run dev\"",
    "type-check": "tsc --noEmit",
    "run": "node start.js",
    "format": "prettier --write \"**/*.{ts,js,json,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,css,md}\"",
    "lint": "prettier --check \"**/*.{ts,js,json,html,css,md}\" && tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "keywords": [
    "accessibility",
    "qa",
    "analyzer",
    "aria",
    "alt",
    "typescript"
  ],
  "author": "RaffyRod (https://github.com/RaffyRod)",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^2.1.0",
    "concurrently": "^9.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tsc --noEmit --pretty"
    ],
    "*.js": [
      "prettier --write"
    ],
    "*.{json,html,css,md}": [
      "prettier --write"
    ]
  }
}
